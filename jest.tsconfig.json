{
    "compilerOptions": {
        "module": "commonjs",
        "preset": "ts-jest",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": false,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "moduleResolution": "node",
        "testMatch": null, 
        "testRegex": "./test/.*.(jsx?|js?|tsx?|ts?)$",
        "lib": [
          "es2017",
          "dom"
        ],
        "typeRoots": [
          "node_modules/@types",
          "src/@types"
        ]
      },
      "exclude": [
        "node_modules",
        "out",
        ".next"
      ]        
}